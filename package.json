{
  "name": "@opengovsg/postmangovsg-client",
  "version": "0.0.1",
  "description": "An OpenAPI client and nodemailer transport for postman.gov.sg",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint --ext ts,tsx,js,jsx . && prettier -c \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix --ext ts,tsx,js,jsx . && prettier -c --write \"src/**/*.{ts,tsx}\"",
    "postinstall": "husky install && openapi-generator-cli generate -g typescript-axios --skip-validate-spec -i https://raw.githubusercontent.com/opengovsg/postmangovsg/master/backend/openapi.yaml -o src/generated",
    "pre-commit": "lint-staged",
    "prepare": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opengovsg/postmangovsg-client.git"
  },
  "author": "Open Government Products (https://open.gov.sg)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opengovsg/postmangovsg-client/issues"
  },
  "homepage": "https://github.com/opengovsg/postmangovsg-client#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "@types/nodemailer": "^6.4.7",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.6.2",
    "typescript": "^4.9.4",
    "husky": "^8.0.2"
  },
  "peerDependencies": {
    "axios": "^1.2.2",
    "nodemailer": "^6.8.0"
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
